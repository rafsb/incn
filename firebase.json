{
  "database": {
    "rules": "etc/firebase/database.json"
  },
  "firestore": {
    "rules": "etc/firebase/firestore.rules",
    "indexes": "etc/firebase/indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "etc/firebase/storage.rules"
  }
}
